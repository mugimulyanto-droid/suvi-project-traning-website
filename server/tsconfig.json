{
  "compilerOptions": {
    "target": "ES2020", // Output JS modern (boleh dinaikkan)
    "module": "nodenext", // Pakai require/module.exports
    "moduleResolution": "nodenext", // Resolusi modul Node.js klasik
    "outDir": "dist", // Folder hasil compile
    "rootDir": "src", // Folder source TypeScript
    "esModuleInterop": true, // Supaya bisa import default dari CJS
    "strict": true, // Nyalakan semua pengecekan ketat
    "skipLibCheck": true, // Supaya gak ribut soal tipe di node_modules
    "forceConsistentCasingInFileNames": true, // Hindari error casing path,
    "sourceMap": false
  },
  "include": [
    "src/**/*"
  ], // Folder source
  "exclude": [
    "node_modules",
    "dist"
  ] // Jangan compile folder ini
}